{
    "sources": {
        "buildings": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        },
        "seismic_hazards": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        }
    },
    "layers": [
        {
            "id": "seismic_hazards-fill",
            "type": "fill",
            "source": "seismic_hazards",
            "paint": {
                "fill-color": "#946b57",
                "fill-opacity": 0.6
            }
        },
        {
            "id": "seismic_hazards-line",
            "type": "line",
            "source": "seismic_hazards",
            "paint": {
                "line-color": "#FFFFFF",
                "line-width": 1
            }
        },
        {
            "id": "buildings-fill",
            "type": "fill-extrusion",
            "source": "buildings",
            "paint": {
                "fill-extrusion-color": [
                    "step",
                    ["get", "height_ft"],
                    "#f7f7f7",
                    100, "#cccccc",
                    200, "#969696",
                    500, "#636363",
                    1000, "#252525"
                ],
                "fill-extrusion-opacity": 0.9,
                "fill-extrusion-height": [
                    "*",
                    ["get", "height_ft"],
                    1
                ]
                },
            "filter": [
                "!=",
                ["get", "height_ft"],
                null
            ]
            
        }
    ]
}
